<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admission Details:"
            android:textSize="20sp"/>



        <RadioGroup
            android:id="@+id/admission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:layout_gravity="center_horizontal">
            <RadioButton
                android:id="@+id/admissionCET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CET"/>

            <RadioButton
                android:id="@+id/admissionCOMEDK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="COMED-K"/>

            <RadioButton
                android:id="@+id/admissionManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Management"/>
        </RadioGroup>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fee Details:"
                android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Amount :"/>

        <EditText
            android:id="@+id/amount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Challan no :"/>

        <EditText
            android:id="@+id/challan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Amount :"/>

            <EditText
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter amount" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Challan no :"/>

            <EditText
                android:id="@+id/challan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    <TextView
        android:id="@+id/tvCourseD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Course Details :"
        android:textSize="20sp" />


        <TextView
            android:id="@+id/tvsgpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SGPA :"
            android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvs1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sem 1 :" />

        <EditText
            android:id="@+id/sgpa1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter sgpa" />

        <TextView
            android:id="@+id/tvs2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Sem 2 :" />

        <EditText
            android:id="@+id/sgpa2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter sgpa" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvs3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem 3 :" />

            <EditText
                android:id="@+id/sgpa3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sgpa" />

            <TextView
                android:id="@+id/tvs4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Sem 4 :" />

            <EditText
                android:id="@+id/sgpa4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter sgpa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tvs5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem 5 :" />

            <EditText
                android:id="@+id/sgpa5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter sgpa" />

            <TextView
                android:id="@+id/tvs6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Sem 6 :" />

            <EditText
                android:id="@+id/sgpa6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter sgpa" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvcgpa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CGPA :" />

        <EditText
            android:id="@+id/cgpa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter cgpa" />

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="8dp"
            android:text="Technical clubs:"/>




    <EditText
        android:id="@+id/clubs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp" />



    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        android:text="Next" />

    </LinearLayout>

</ScrollView>